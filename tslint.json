{
	"extends": ["tslint:recommended", "tslint-react"],
	"rules": {
		"no-consecutive-blank-lines": [true, 2],
		"arrow-parens": false,
		"object-literal-sort-keys": false,
		"array-type": false,
		"trailing-comma": false,

		"no-var-requires": false, // because of css imports
		"no-namespace": false,

		// to consider
		"max-classes-per-file": false,
		"variable-name": false, // TODO: enable later


		// to remove later:
		"semicolon": false,
		"jsx-no-multiline-js": false,
		"jsx-alignment": false,
		"member-ordering": false,
		"triple-equals": false,
		"curly": false,
		"max-line-length": [false],
		"member-access": false,
		"indent": false,
		"quotemark": false
	}
}
