{
	"rules": {
		"block-no-empty": null,
		"color-no-invalid-hex": true,
		"comment-empty-line-before": [ "always", {
			"ignore": ["stylelint-command", "after-comment"]
		} ],
		"declaration-colon-space-after": "always",
		"indentation": ["tab", {
			"except": ["value"]
		}],
		"max-empty-lines": 3,
		"unit-whitelist": ["em", "rem", "%", "s", "px", "fr"]
	}
}
